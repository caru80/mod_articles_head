<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>MOD_ARTICLES_HEAD</name>
	<author>Carsten Ruppert</author>
	<creationDate>2018-05-02</creationDate>
	<copyright></copyright>
	<license></license>
	<authorEmail>webmaster@headmarketing.de</authorEmail>
	<authorUrl>http://www.headmarketing.de</authorUrl>
	<version>1.5.0</version>
	<description>MOD_ARTICLES_HEAD_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_articles_head">mod_articles_head.php</filename>
		<folder>tmpl</folder>
		<folder>xfields</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_articles_head.xml</filename>
	</files>
	<languages folder="language">
		<language tag="de-DE">de-DE.mod_articles_head.ini</language>
		<language tag="de-DE">de-DE.mod_articles_head.sys.ini</language>
	</languages>
	<media destination="mod_articles_head" folder="media">
		<filename>index.html</filename>
		<folder>js</folder>
	</media>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_ARTICLES_NEWSFLASH" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field
					name="show_moduleintro"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="MOD_ARTICLES_HEAD_FIELD_SHOW_MODULEINTRO_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_SHOW_MODULEINTRO_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="moduleintro"
					type="editor"
					filter="raw"
					showon="show_moduleintro:1"
					label="MOD_ARTICLES_HEAD_FIELD_MODULEINTRO_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_MODULEINTRO_DESC"
				/>

				<field
					name="note-filter"
					type="note"
					label="MOD_ARTICLES_HEAD_FIELD_NOTE_FILTER_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_NOTE_FILTER_DESC"
				/>
				<field
					name="catid"
					type="category"
					extension="com_content"
					multiple="true"
					default=""
					size="10"
					label="JCATEGORY"
					description="MOD_ARTICLES_HEAD_FIELD_CATEGORY_DESC"
				>
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>

				<field
					name="tag"
					type="tag"
					label="JTAG"
					description="JTAG_DESC"
					mode="nested"
					multiple="true"
					class="multipleTags"
				/>

				<field
					name="show_featured"
					type="radio"
					class="btn-group"
					default=""
					label="MOD_ARTICLES_HEAD_FIELD_SHOW_FEATURED_ITEMS_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_SHOW_FEATURED_ITEMS_DESC"
				>
					<option value="0">MOD_ARTICLES_HEAD_FIELD_SHOW_FEATURED_ITEMS_OPT_HIDE</option>
					<option value="">MOD_ARTICLES_HEAD_FIELD_SHOW_FEATURED_ITEMS_OPT_SHOW</option>
					<option value="1">MOD_ARTICLES_HEAD_FIELD_SHOW_FEATURED_ITEMS_OPT_ONLY</option>
				</field>

				<field
					name="hidecurrentarticle"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="MOD_ARTICLES_HEAD_HIDECURRENTARTICLE"
					description="MOD_ARTICLES_HEAD_HIDECURRENTARTICLE_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="note-module-link"
					type="note"
					label="MOD_ARTICLES_HEAD_FIELD_NOTE_MODULE_READMORE_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_NOTE_MODULE_READMORE_DESC"
				/>

				<field
					name="linkeditem"
					type="menuitem"
					published="1"
					label="MOD_ARTICLES_HEAD_FIELD_LINKEDITEM_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_LINKEDITEM_DESC"
				>
					<option	value="">JNO</option>
				</field>
				<field
					name="linkcategory"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="MOD_ARTICLES_HEAD_FIELD_LINKTOCATEGORY_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_LINKTOCATEGORY_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="module_readmore_label"
					type="text"
					class="input-medium"
					default=""
					showon="linkeditem!:[OR]linkcategory!:0"
					hint="MOD_ARTICLES_HEAD_FIELD_MODULEREADMORE_LABEL_FRONT"
					label="MOD_ARTICLES_HEAD_FIELD_MODULEREADMORE_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_MODULEREADMORE_DESC"
				/>

				<field
					name="module-link-position"
					type="radio"
					class="btn-group"
					default="0"
					showon="linkeditem!:[OR]linkcategory!:0"
					label="MOD_ARTICLES_HEAD_FIELD_MODULE_READMORE_POSITION_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_MODULE_READMORE_POSITION_DESC"
				>
					<option value="0">MOD_ARTICLES_HEAD_FIELD_MODULE_READMORE_POSITION_OPT_BOTTOM</option>
					<option value="1">MOD_ARTICLES_HEAD_FIELD_MODULE_READMORE_POSITION_OPT_TOP</option>
					<option value="2">MOD_ARTICLES_HEAD_FIELD_MODULE_READMORE_POSITION_OPT_BOTH</option>
				</field>

				<field
					name="note-articles"
					type="note"
					label="MOD_ARTICLES_HEAD_FIELD_NOTE_ARTICLES_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_NOTE_ARTICLES_DESC"
				/>

				<field
					name="preview-image"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="MOD_ARTICLES_HEAD_FIELD_IMAGEINTRO_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_IMAGEINTRO_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="image"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="MOD_ARTICLES_HEAD_FIELD_IMAGES_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_IMAGES_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="item_title"
					class="btn-group btn-group-yesno"
					type="radio"
					default="0"
					label="MOD_ARTICLES_HEAD_FIELD_ITEM_TITLE_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_ITEM_TITLE_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="link_titles"
					type="list"
					class="chzn-color"
					label="MOD_ARTICLES_HEAD_FIELD_LINK_TITLES_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_LINK_TITLES_DESC"
				>
					<option value="">JGLOBAL_USE_GLOBAL</option>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="item_heading"
					type="list"
					default="h4"
					label="MOD_ARTICLES_HEAD_FIELD_TITLE_HEADING_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_TITLE_HEADING_DESC"
				>
					<option value="h1">JH1</option>
					<option value="h2">JH2</option>
					<option value="h3">JH3</option>
					<option value="h4">JH4</option>
					<option value="h5">JH5</option>
					<option value="h5">JH6</option>
				</field>

				<field
					name="readmore"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="MOD_ARTICLES_HEAD_FIELD_READMORE_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_READMORE_DESC"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="triggerevents"
					type="radio"
					label="MOD_ARTICLES_HEAD_FIELD_TRIGGER_EVENTS_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_TRIGGER_EVENTS_DESC"
					class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="note-articles-content-events"
					type="note"
					description="MOD_ARTICLES_HEAD_FIELD_NOTE_CONTENT_EVENTS_DESC"
				/>

				<field
					name="note-ordering"
					type="note"
					label="MOD_ARTICLES_HEAD_FIELD_NOTE_ORDERING_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_NOTE_ORDERING_DESC"
				/>

				<field
					name="count"
					type="text"
					default="5"
					label="MOD_ARTICLES_HEAD_FIELD_ITEMS_COUNT_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_ITEMS_COUNT_DESC" />

				<field
					name="ordering"
					type="list"
					default="a.publish_up"
					label="MOD_ARTICLES_HEAD_FIELD_ORDERING_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_ORDERING_DESC"
				>
					<option value="a.publish_up">MOD_ARTICLES_HEAD_FIELD_ORDERING_OPT_PUBLISHED_DATE</option>
					<option value="a.created">MOD_ARTICLES_HEAD_FIELD_ORDERING_OPT_CREATED_DATE</option>
					<option value="a.ordering">MOD_ARTICLES_HEAD_FIELD_ORDERING_OPT_ORDERING</option>
					<option value="a.hits">JGLOBAL_HITS</option>
					<option value="rand()">MOD_ARTICLES_HEAD_FIELD_ORDERING_OPT_RANDOM</option>
				</field>

				<field
					name="direction"
					type="list"
					default="1"
					label="JGLOBAL_ORDER_DIRECTION_LABEL"
					description="JGLOBAL_ORDER_DIRECTION_DESC"
				>
					<option value="0">JGLOBAL_ORDER_ASCENDING</option>
					<option value="1">JGLOBAL_ORDER_DESCENDING</option>
				</field>

				<field
					name="note-ajax-interface"
					type="note"
					label="MOD_ARTICLES_HEAD_FIELD_NOTE_AJAX_INTERFACE_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_NOTE_AJAX_INTERFACE_DESC"
				/>

				<field
					name="ajax_loadmore"
					type="radio"
					class="btn-group"
					default="0"
					label="MOD_ARTICLES_HEAD_FIELD_AJAX_LOADMORE_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_AJAX_LOADMORE_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="ajax_loadmore_label"
					type="text"
					showon="ajax_loadmore:1"
					class="input-md"
					default=""
					label="MOD_ARTICLES_HEAD_FIELD_AJAX_LOADMORE_LINK_LABEL"
					description="MOD_ARTICLES_HEAD_FIELD_AJAX_LOADMORE_LINK_DESC"
					hint="MOD_ARTICLES_HEAD_AJAXLOADMORE_LABEL"
				/>

			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="cachemode"
					type="hidden"
					default="itemid"
				>
					<option value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>

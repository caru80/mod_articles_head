<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="attribs">
		<fieldset name="mod_articles_head">
			<field
				name="xfields-note-videos"
				type="note"
				label="MOD_ARTICLES_HEAD_XFIELDS_VIDEOS_NOTE_LABEL"
				description="MOD_ARTICLES_HEAD_XFIELDS_VIDEOS_NOTE_DESC"
			/>
			<field
				name="xfields_teaser_video"
				type="filelist"
				directory="images/videos"
				hide_default="true"
				default="0"
				filter="(.\.mp4)"
				label="MOD_ARTICLES_HEAD_XFIELDS_TEASER_VIDEO_LABEL"
				description="MOD_ARTICLES_HEAD_XFIELDS_TEASER_VIDEO_DESC"
			/>
			<field
				name="xfields_full_video"
				type="filelist"
				directory="images/videos"
				hide_default="true"
				default="0"
				filter="(.\.mp4)"
				label="MOD_ARTICLES_HEAD_XFIELDS_FULL_VIDEO_LABEL"
				description="MOD_ARTICLES_HEAD_XFIELDS_FULL_VIDEO_DESC"
			/>

			<field
				name="xfields-note-readmore-override"
				type="note"
				label="MOD_ARTICLES_HEAD_XFIELDS_NOTE_READMORE_OVERRIDE_LABEL"
				description="MOD_ARTICLES_HEAD_XFIELDS_NOTE_READMORE_OVERRIDE_DESC"
			/>

            <field
                name="xfields_readmore_override"
                type="list"
                default=""
                label="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_LABEL"
                description="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_DESC"
            >
                <option value="">JNONE</option>
				<option value="menuitem">MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_OPT_MENUITEM</option>
				<option value="article">MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_OPT_ARTICLE</option>
				<option value="url">MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_OPT_URL</option>
            </field>
			
			<field
				name="xfields_readmore_override_menuitem"
				type="menuitem"
				published="true"
				showon="xfields_readmore_override:menuitem"
				label="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_MENUITEM_LABEL"
				description="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_MENUITEM_DESC"
			>
				<option	value="">JNONE</option>
			</field>
			<field
				name="xfields_readmore_override_article"
				type="modal_article"
				showon="xfields_readmore_override:article"
				edit="true"
				clear="true"
				label="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_ARTICLE_LABEL"
				description="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_ARTICLE_DESC"
			/>
			<field
				name="xfields_readmore_override_url"
				type="text"
				showon="xfields_readmore_override:url"
				class="input-xxlarge"
				label="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_URL_LABEL"
				description="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_URL_DESC"
				hint="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_URL_HINT"
			/>
			<field
				name="xfields_readmore_blank"
				type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_TARGETBLANK_LABEL"
				description="MOD_ARTICLES_HEAD_XFIELDS_READMORE_OVERRIDE_TARGETBLANK_DESC"
			>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

		</fieldset>
	</fields>
</form>
